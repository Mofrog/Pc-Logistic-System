<Window x:Class="LogisticSystem.Windows.WindowAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticSystem.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <StackPanel Orientation="Vertical" Margin="30,10,30,30" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Введите логин:" />
            <TextBox x:Name="TxtLogin" Margin="13,2,5,2"/>
        </StackPanel >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" >
            <TextBlock Text="Введите пароль:" />
            <PasswordBox x:Name="TxtPassword"/>
        </StackPanel>
        <Button x:Name="BtnAuth" MaxWidth="200" Content="Авторизоваться" Click="BtnAuth_Click" />
    </StackPanel>
</Window>
